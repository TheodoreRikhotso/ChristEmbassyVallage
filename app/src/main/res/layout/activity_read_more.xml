<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.admin.christembassyvallage.ReadMoreActivity">

    <android.support.v7.widget.CardView
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#393E46"
            android:orientation="vertical"
           >

            <TextView
                android:id="@+id/tvTestmonyNameMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="45dp"
                android:text="tvTestmonyName"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_below="@+id/tvTestTimeMore"
                android:layout_toEndOf="@+id/ivLikeMore" />

            <View
                android:id="@+id/dMore"
                android:layout_width="match_parent"
                android:layout_height="2.5dp"
                android:layout_below="@+id/tvTestmonyNameMore"
                android:background="@drawable/shape_vertical_dashed_line" />

            <LinearLayout
                android:id="@+id/llMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvTestmonyNameMore"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp">

                <TextView
                    android:id="@+id/tvDescrptionMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"

                    android:text="kjlkj"
                    android:textColor="#fff" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTestTimeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/circleImageViewMore"
                android:text="tvTestmonyName"
                android:textColor="#696969"
                android:textSize="13dp"

                android:textStyle="italic" />


            <ImageView
                android:id="@+id/ivLikeMore"
                android:layout_width="20dp"
                android:layout_height="20dp"
              android:layout_below="@+id/llMore"
                android:layout_alignStart="@+id/llMore"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/like" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageViewMore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="57dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"

                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/tvTestmonyNameMore" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
