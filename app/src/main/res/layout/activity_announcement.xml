<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.christembassyvallage.AnnouncementActivity">
   <android.support.v7.widget.Toolbar
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tiTitle"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/spTitle"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/etAnnTitle"
            android:hint="Title"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tt"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/spTitle"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/etAnnDesciption"
            android:hint="Description"
            android:inputType="textAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/ttPlace"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/spTitle"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/etAnnPlace"
            android:hint="Place"
            android:inputType="textPostalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvAnnStartDate"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="12/oct/2014"/>
        <TextView
            android:id="@+id/tvAnnEndDate"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="12/oct/2014"/>
        <TextView
            android:id="@+id/tvAnnTime"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="12/oct/2014"/>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Submit"
        android:textColor="@color/colorPrimary"
        android:id="@+id/btnAnnSumbit"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textAlignment="center" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/viewAll"
        android:background="@drawable/ic_list_black_24dp"
        android:src="@drawable/ic_list_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
