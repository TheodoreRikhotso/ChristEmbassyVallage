<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
android:padding="4dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="80dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvEventsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/ii"
        android:text="Title"
        android:textColor="#393E46"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvEventsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:lines="2"
        android:layout_alignStart="@+id/tvEventsTitle"
        android:layout_below="@+id/tvEventsTitle"

        android:text="Description" />

    <RelativeLayout
        android:id="@+id/ii"
        android:background="@color/colorAccent"
        android:layout_width="70dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvEventsTime"
            android:layout_width="40dp"
            android:textColor="#696969"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tvEventDates"
            android:gravity="center"
            android:text="08:50" />




        <TextView

            android:id="@+id/tvEventDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"

            android:text="20 Sep" />
    </RelativeLayout>
    <!--<View-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="2dp"-->

        <!--android:layout_below="@+id/ii"-->

        <!--android:background="@drawable/line"-->
        <!--android:id="@+id/view" />-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>